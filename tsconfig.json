{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["packages/**/*.js", "packages/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules", "target", "tests"]
}
